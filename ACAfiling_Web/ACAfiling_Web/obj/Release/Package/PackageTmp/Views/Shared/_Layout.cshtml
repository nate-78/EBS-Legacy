@using EbsClassPkg.Models
@{ 
    var user = ACAfiling_Web.Models.CurrentUserSingleton.GetUser();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <!--<div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>-->
            <div class="navbar-collapse collapse">
                <a href="//ezebshub.com" id="logo-main"><img src="~/Images/temp-logo.jpg" alt="logo" /></a>

                <button type="button" class="menu-btn">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.Partial("_LoginPartialFormsAuth")
            </div>

        </div>
        <div id="nav-side">
            <ul class="nav navbar-nav">
                <li class="active-link"><a href="//ezebshub.com">Hub</a></li>
                <li><a href="//ezebshub.com/vault"><em>my</em>Vault</a></li>
                <li><a href="//ezacafile.ezebshub.com">ezACA<em>file</em></a></li>
                @if (user.HasBenEnrollAccess) {
                    <li><a href="http://ec2-54-174-16-15.compute-1.amazonaws.com/" target="_blank">ezEBS<em>enroll</em></a></li>
                }
                <li><a href="//ezebshub.com/reporting">ezEBS<em>reports</em></a></li>
                <li class="line"></li>
                <li><a href="//ezebshub.com/home/admin">Admin</a></li>
                <li><a href="http://www.employerbenefitsservices.com/contact" target="_blank">Contact</a></li>
                <li class="line"></li>
                <li><a href="javascript:void(0);" id="log-out-btn">Logout</a></li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div id="lightbox">
        <div class="lightbox-content">
            <div id="close-lightbox">X</div>
        </div>
    </div>
    <footer>
        <div class="container">
            <p id="copyright">&copy; @DateTime.Now.Year - EBS</p>
            <p class="links"><a href="http://www.employerbenefitsservices.com/privacy-statement" target="_blank">Privacy Policy</a> &nbsp;&nbsp;&nbsp; <a href="http://www.employerbenefitsservices.com/terms-of-use" target="_blank">Terms of Use</a></p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/scripts.js")
    @RenderSection("scripts", required: false)
</body>
</html>
